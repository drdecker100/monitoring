b = [1, 2, 3]
c = a 

print(a == b)
> True 

print(a is b)
> True

print(id(a))
> 2639312 

print(id(b))
> 2640472 

print(id(c))                            # c and a points to the same id
> 2639312

print(id(a) == id(b))                   # similar to is
> True

condition = False                       # False, None, 0 , " " , () , {} evaluates to false

if condition:
    print('Evaluated to True')
else:
    print('Evaluated to False')


