# finding the smallest number in a list
L = [2,1,3,-5,2,-6]

m = L[0]

for i in L:              #iterate through list L
    
    if i<m:
        m = i            #replace with new value
        
print(m)

# finding the largest number in a list
L = [2,1,3,-5,2,-6]

m = L[0]

for i in L:              #iterate through list L
    
    if i>m:
        m = i            #replace with new value
        
print(m)

#Sorting numbers of a list
L = [1,2,4,-5,7,9,3,2]
for j in range(len(L)):
    m = L[j]
    idx = j
    c = j
    for i in range(j,len(L)):
        if L[i]<m:
            m = L[i]
            idx = c
        c+=1    
    tmp = L[j]
    L[j] = m
    L[idx] = tmp
print(L)

